<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <lifecycle>
        <phase-listener>br.com.clientes.util.PhaseListenerLeilao</phase-listener>
    </lifecycle>
    
    <managed-bean>
    <managed-bean-name>usuarioBean</managed-bean-name>
    <managed-bean-class>br.com.clientes.model.entities.Usuario</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <navigation-rule>
    <from-view-id>/login.jsp</from-view-id>
    <navigation-case>
      <from-outcome>sucesso</from-outcome>
      <to-view-id>/sucesso.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>erro</from-outcome>
      <to-view-id>/erro.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

</faces-config>